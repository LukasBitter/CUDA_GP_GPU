extern __global__ void julia(uchar4* ptrTabPixels,uint w, uint h, uint t, DomaineMath domaineMath);

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/
Julia::Julia(const Grid& grid, uint w, uint h, uint nMin, uint nMax, const DomaineMath& domaineMath) :
	Fractal(grid, w, h, nMin, nMax, domaineMath)
    {
    // Tools
    this->t = nMin;					// protected dans super classe Animable

    }

Julia::~Julia(void)
    {
    // rien
    }

/*--------------------------------------*\
 |*		Surcharge		*|
 \*-------------------------------------*/

void startFractal(uchar4* ptrTabPixels, uint w, uint h, const DomaineMath& domaineMath)
    {

	julia<<<dg,db>>>(ptrTabPixels,w,h,t, domaineMath);
    }

