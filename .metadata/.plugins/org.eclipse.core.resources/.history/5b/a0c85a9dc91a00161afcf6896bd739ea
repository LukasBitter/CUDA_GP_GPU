#include <iostream>
#include "Histogramme.h"
#include <assert.h>

using std::cout;
using std::endl;

/*----------------------------------------------------------------------*\
 |*			Declaration 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Imported	 	*|
 \*-------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useHistogramme(void);

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			Implementation 					*|
 \*---------------------------------------------------------------------*/

/*--------------------------------------*\
 |*		Public			*|
 \*-------------------------------------*/

bool useHistogramme(void)
    {
    int nDataRange = 32;
    int nTabData = nDataRange * (nDataRange + 1) / 2;
    uchar* tabData = new uchar[nTabData];
    int* ptrHisto = new int;

    int s = 0;
    for (int i = 0; i < nDataRange; i++)
	{
	for (int j = 0; j <= i; j++)
	    {
	    tabData[s] = i;
	    s++;
	    }
	}

    assert(s == nTabData);

    // Partie interessante
	{
	Histogramme histo(tabData, nDataRange);
	ptrHisto = histo.run();
	/*for(int i = 0; i< nDataRange; i++)
		{
		cout << ptrHisto[i] << " ; ";
		}*/

	for (int i = 0; i < nDataRange; i++)
	    {
	    cout << i + 1 << " % " << ptrHisto[i] << ": ";
	    cout << (i + 1) % ptrHisto[i] << endl;
	    }
	cout << endl;
	}



    bool isOk = true;

    return isOk;
    }

/*--------------------------------------*\
 |*		Private			*|
 \*-------------------------------------*/

/*----------------------------------------------------------------------*\
 |*			End	 					*|
 \*---------------------------------------------------------------------*/

