bool usePI(void)
    {
    cout << endl << "[PI]" << endl;

    int n = INT_MAX / 1000;
    bool isOk = true;

    PI pi(n);
    pi.run();

    isOk &= MathTools::isEquals(saucisson.getPi(), M_PI, 1e-3);;
    //isOk &= isPiCUDAforReduction_Ok(n);

    return isOk;
    }

