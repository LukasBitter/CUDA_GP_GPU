bool useHistogramme(void)
    {
    int n = 256;
    int* ptrHisto = new int[n];

    // Partie interessante
	{
	Histogramme histo(n);
	ptrHisto = histo.run();
	}


	for(int i = 1; i<= n; i++)
	    {
	    cout << ptrHisto[i] << " ; ";
	    cout << i%ptrHisto[i] << endl;
	    }
	cout << endl;

    //VectorTools::print(ptrW, n); // check result
//	int[] tabCheck = new int[256];


	bool isOk = true;

    return isOk;
    }

