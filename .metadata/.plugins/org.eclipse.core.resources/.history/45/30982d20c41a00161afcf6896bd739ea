bool useHistogramme(void)
    {
    int n = 256;

    // Partie interessante
	{
	Histogramme histo(n);
	int* ptrHisto = histo.run();
	}


	for(int i = 0; i< n; i++)
	    {
	    cout << &ptrHisto[i] << " ; ";
	    }

    //VectorTools::print(ptrW, n); // check result
//	int[] tabCheck = new int[256];


	bool isOk = true;

    return isOk;
    }

